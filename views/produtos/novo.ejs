<!DOCTYPE html>
<html>

<head>
  <title>Eventos</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <nav><object width="100%" height="65px" data="../views/menu.ejs"></object></nav>
  <div class="todosprodutos">
  <h1>Novo Produto</h1>
  <p>
    <a href="/produtos">Voltar</a>
  </p>
  <% if (typeof(errors) !="undefined" ) { %>
    <div style="color: red; border: 1px solid red;">
      <ul>
        <% for(var i=0; i < errors.length; i++) { %>
          <li>
            <%= errors[i] %>
          </li>
          <% } %>
      </ul>
    </div>
    <% } %>

  <form action="/produtos" method="post">
    <p>
      <label for="descricao">Descricao do Produto:</label><br>
      <input type="text" id="descricao" name="descricao"><br>
    </p>
    <p>
      <label for="preco">Pre√ßo do Produto:</label><br>
      <input type="number" min="0" id="preco" name="preco"><br>
    </p>
    <input type="submit" value="Submeter">
  </form>
</div>
</body>

</html>